<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
        <pattern>%highlight(%d{HH:mm:ss} [%thread] %-5level %logger{36}) - %msg%n</pattern>
      </encoder>
    </appender>

    <!-- Set root level to WARN -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- Suppress debug logs from specific packages -->
    <logger name="com.github.dockerjava" level="INFO"/>
    <logger name="org.apache.hc.client5" level="INFO"/>
</configuration>
